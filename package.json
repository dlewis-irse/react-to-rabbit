    "@marketing/web-dev-eslint-config": "^2.0.2",
    "babel-jest": "^29.7.0",
    "eslint": "^9.25.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
